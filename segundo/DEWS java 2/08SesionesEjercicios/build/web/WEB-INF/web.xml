<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Ej0</servlet-name>
        <servlet-class>servlets.Ej0</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ej1ServletJuego</servlet-name>
        <servlet-class>servlets.Ej1ServletJuego</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ej1ServletComprobar</servlet-name>
        <servlet-class>servlets.Ej1ServletComprobar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ej2ProcesoPregunta</servlet-name>
        <servlet-class>servlets.Ej2ProcesoPregunta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ej2ServletResultado</servlet-name>
        <servlet-class>servlets.Ej2ServletResultado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ej3EscribeApuesta</servlet-name>
        <servlet-class>servlets.Ej3EscribeApuesta</servlet-class>
        <init-param>
            <param-name>ruta</param-name>
            <param-value>partidos.txt</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Ej3procesaApuesta</servlet-name>
        <servlet-class>servlets.Ej3procesaApuesta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ej0</servlet-name>
        <url-pattern>/Ej0</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ej1ServletJuego</servlet-name>
        <url-pattern>/Ej1ServletJuego</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ej1ServletComprobar</servlet-name>
        <url-pattern>/Ej1ServletComprobar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ej2ProcesoPregunta</servlet-name>
        <url-pattern>/Ej2ProcesoPregunta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ej2ServletResultado</servlet-name>
        <url-pattern>/Ej2ServletResultado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ej3EscribeApuesta</servlet-name>
        <url-pattern>/Ej3EscribeApuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ej3procesaApuesta</servlet-name>
        <url-pattern>/Ej3procesaApuesta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
